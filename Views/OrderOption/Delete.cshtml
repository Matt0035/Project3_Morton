@model Project3_Morton.Models.OrderOption
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm("Delete", "OrderOption", FormMethod.Post))
{
    <h3>Are you sure you want to delete this customer?</h3>
    @Html.HiddenFor(c => c.Id)
    @Html.HiddenFor(c => c.AdditionalBookShipCharge, new { @class = "form-control", placeholder = "AdditionalBook ShipCharge" })
    @Html.HiddenFor(c => c.FirstBookShipCharge, new { @class = "form-control", placeholder = "FirstBookShipCharge" })
    @Html.HiddenFor(c => c.SalesTaxRate, new { @class = "form-control", placeholder = "SalesTaxRate" })

    <input type="submit" value="Submit" class="btn btn-info" />
    <input type="button" value="Cancel" class="btn btn-danger" onclick="window.location.href = '/OrderOption/All'" />
}
