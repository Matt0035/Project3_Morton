@model Project3_Morton.Models.Invoice
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm("Delete", "Invoice", FormMethod.Post))
{
    <h3>Are you sure you want to delete this invoice?</h3>
    @Html.HiddenFor(gm => gm.InvoiceID)
    @Html.HiddenFor(gm => gm.InvoiceDate, new { @class = "form-control", placeholder = "Invoice Date" })
    @Html.HiddenFor(gm => gm.InvoiceTotal, new { @class = "form-control", placeholder = "Invoice Total" })
    @Html.HiddenFor(gm => gm.ProductTotal, new { @class = "form-control", placeholder = "Product Total" })
    @Html.HiddenFor(gm => gm.SalesTax, new { @class = "form-control", placeholder = "SalesTax" })
    @Html.HiddenFor(gm => gm.Shipping, new { @class = "form-control", placeholder = "Shipping" })

    <input type="submit" value="Submit" class="btn btn-info" />
    <input type="button" value="Cancel" class="btn btn-danger" onclick="window.location.href = '/invoce/All'" />
}
