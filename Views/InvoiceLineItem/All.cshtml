@model List<Project3_Morton.Models.InvoiceLineItem>
@{
    ViewBag.Title = "All";
}

<h2>All Invoice Line Items</h2>

<a href="/InvoiceLineItem/Upsert/0">Add New</a>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.Search()" />

    </div>
</div>

<table class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0)">Invoice ID</th>
            <th onclick="Sortable.Sort(1)">Product Code</th>
            <th onclick="Sortable.Sort(2)">Quantity</th>
            <th onclick="Sortable.Sort(3)">Unit Price</th>
            <th onclick="Sortable.Sort(4)">Item Total</th>
            <th>Actions</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var InvoiceLineItem in Model)
        {
            <tr>
                <td>@InvoiceLineItem.InvoiceID</td>
                <td>@InvoiceLineItem.ProductCode</td>
                <td>@InvoiceLineItem.Quantity</td>
                <td>@InvoiceLineItem.UnitPrice</td>
                <td>@InvoiceLineItem.ItemTotal</td>
                <td>
                    <a href="/InvoiceLineItem/Upsert/@InvoiceLineItem.InvoiceID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>